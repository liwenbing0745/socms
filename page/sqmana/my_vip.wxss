/* page/sqmana/my_vip.wxss */
page {
	height: 100%;
  font-family: "Microsoft YaHei";
  font-size:28rpx;
}
.container {
	height: 100%;
  background-color: #fff;
}
.flex_box{
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.flex_inline{
  display: inline-flex;
  width: 100%;
  justify-content: space-between;
}
.fc_orange{
  color: #fc4b00;
}
.content .box{
  background-color: #989898;
}
.content .items{
  padding: 15rpx;
  margin: 10rpx 0;
  background-color: #fff;
}
.content .items .vip_img{
  width: 80rpx;
  height: 80rpx;
}
.content .items .about_box{
  position: relative;
}
.content .items .user_box{
  padding-left: 15rpx;
}
.content .items .about_box .flex_inline{
  align-items: center;
}
.content .items .num_box{
  flex-direction: column;
  justify-content: flex-end;
}
.content .items .about_box .text_box>view{
  padding:15rpx 0;
}
.content .items .about_box text{
  display: inline-block;
  padding: 12rpx 0;
  font-size: 26rpx;
}
.content .items .num_box text{
  padding: 5rpx 0;
  width: 100%;
  text-align: right;
}
.content .items .tail{
  position: absolute;
  right: 2%;
  top: 25%;
}