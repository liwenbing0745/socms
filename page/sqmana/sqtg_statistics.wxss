.box_title{
  padding: 20rpx;
  background-color: #ddd;
}

.big_select{
  justify-content: space-around;
  background-color: #ddd;
}
.big_select .items{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  cursor: pointer;
}
.big_select .select{
  background-color: #fff;
}
.big_select .select text{
  color: #fc4b00;
}

.small_select{
  justify-content: space-around;
  background-color: #fff;
}
.small_select .items{
  width: 20%;
  height: 70rpx;
  line-height: 24rpx;
  text-align: center;
  cursor: pointer;
}
.small_select .select text{
  color: #e4393c;
  text-decoration: underline;
}