/* page/sqmana/my_vip.wxss */
page {
	height: 100%;
  font-family: "Microsoft YaHei";
  font-size:28rpx;
}
.container {
	height: 100%;
  background-color: #fff;
}
.flex_box{
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.flex_inline{
  display: inline-flex;
  width: 100%;
  justify-content: space-between;
}
.fc_orange{
  color: #fc4b00;
}
.content .box{
  background-color: #989898;
}
.content .items{
  padding: 10rpx 15rpx;
  margin: 10rpx 0;
  background-color: #fff;
}
.content .items .vip_img{
  width: 200rpx;
  height: 200rpx;
}
.content .items .about_box{
  position: relative;
  justify-content: flex-start;
}
.content .items .about_box .flex_inline{
  padding-left: 20rpx;
  flex-direction: column;
}
.content .items .about_box .text_box>view{
  padding:15rpx 0;
}
.content .items .about_box text{
  display: inline-flex;
  padding: 12rpx 0;
}
.content .items .tail{
  position: absolute;
  right: 2%;
  top: 25%;
}
.content .items .infor_box .flex_box{
  flex-wrap: wrap;
  padding: 8rpx;
  border: 1px dotted #fc4b00;
  border-radius: 15rpx;
}
.content .items .infor_box .flex_box>text{
  display: inline-flex;
  width: 50%;
  padding: 12rpx 0;
}