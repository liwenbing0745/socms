page{
  font-family: "Microsoft YaHei";
  font-size:28rpx;
}
.container{
  padding-bottom: 200rpx;
}
.header {
	display: -webkit-flex;
	padding: 20rpx;
	background: #fff;
}

.header .icon {
	width: 40rpx;
	height: 40rpx;
	vertical-align: top;
}

.header .search {
	-webkit-flex: 1;
	color: #000;
	font-size: 30rpx;
	line-height: 40rpx;
	padding: 10rpx;
	border-radius: 10rpx;
	background: #eee;
}

.header .search .icon {
	float: left;
	margin: 1rpx 5rpx 0 0;
}

.header button {
	margin-left: 20rpx;
	font-size: 30rpx;
}

.header input {
	height: 30rpx;
	min-height: 40rpx;
}

.result {
	padding: 0;
}
.result .shop_list{
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  justify:space-between;
}
.result .filters {
	z-index: 1;
	position: relative;
	display: -webkit-flex;
	border-top: 1rpx solid #efefef;
	border-bottom: 1rpx solid #efefef;
	background: #fff;
}

.result .filters .filter {
	-webkit-flex: 1;
	text-align: center;
	color: #696969;
	font-size: 30rpx;
	line-height: 3;
}

.result .filters .filter .v {
	display: none;
}

.result .filters .filter.active {
	color: #fb4b00;
	font-weight: bold;
}

.result .filters .filter.active .v {
	display: inline-block;
}

.result scroll-view {
	position: absolute;
	top: 200rpx;
	bottom: 0;
	left: 0;
	right: 0;
	background: #fff;
  padding-bottom: 200rpx;
}

.result .shop {
	display:inline-flex;
  width:47%;
	padding: 10rpx 10rpx;
  margin-bottom:10rpx;
}
.result .shop navigator{
  display:inline-flex;
  flex-direction:row;
  flex-wrap:wrap;
}
.result .shop .shopText{
  display:inline-flex;
  flex-direction: column;
  padding:0  10rpx;
  border-bottom: 1rpx solid #efefef;
  text-align:center;
}

.result .shop image {
	width: 100%;
  height:350rpx;
}

.result .shop .v{
  font-size:32rpx;
	display:flex;
  padding-top:10rpx;
}

.result .shop .price{
  font-size: 40rpx;
  color:#fb4b00;
}

.result .shop .market{
  text-decoration:line-through;
  line-height: 65rpx;
  color:#9fa0a0;
}
.result .shop .name{
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden; 
  font-size:30rpx;
  height:85rpx;
}
.loading {
	font-size: 32rpx;
	text-align: center;
	line-height: 2;
	margin-bottom: 20rpx;
}