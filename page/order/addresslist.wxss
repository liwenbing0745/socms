page{
  font-family: "Microsoft YaHei";
  font-size:28rpx;
}
.flex_box{
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.header {
	display: -webkit-flex;
	padding: 20rpx;
	background: #fff;
}

.header .icon {
	width: 40rpx;
	height: 40rpx;
	vertical-align: top;
}

.header .search {
	-webkit-flex: 1;
	color: #000;
	font-size: 30rpx;
	line-height: 40rpx;
	padding: 10rpx;
	border-radius: 10rpx;
	background: #eee;
}

.header .search .icon {
	float: left;
	margin: 1rpx 5rpx 0 0;
}

.header button {
	margin-left: 20rpx;
	font-size: 30rpx;
}

.header input {
	height: 30rpx;
	min-height: 40rpx;
}

.result {
	padding: 0 0 80rpx 0;
}

.result .filters {
	z-index: 1;
	position: relative;
	display: -webkit-flex;
	border-top: 1rpx solid #efefef;
	border-bottom: 1rpx solid #efefef;
	background: #fff;
}

.result .filters .filter {
	-webkit-flex: 1;
	text-align: center;
	color: #696969;
	font-size: 30rpx;
	line-height: 3;
}

.result .filters .filter .v {
	display: none;
}

.result .filters .filter.active {
	color: #000;
	font-weight: bold;
}

.result .filters .filter.active .v {
	display: inline-block;
}

.result scroll-view {
	background: #fff;
}

.result .shop {
	padding: 20rpx;
  border-bottom: 1px solid #ddd;
}
.result .shop>view{
  padding: 15rpx 0;
}
.result .shop .select_box button{
  margin-left: 30rpx;
}
.result .select_box>view.flex_box{
  width:250rpx;
}
.result .shop image {
	width: 100%;
	height: 266rpx;
}
.loading {
	font-size: 32rpx;
	text-align: center;
	line-height: 2;
	margin-bottom: 20rpx;
}
.btn_box{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  padding: 10rpx 0;
  justify-content: space-around;
  background-color: #fff;
  z-index: 50;
}
.btn_box button{
  width: 45%;
}

.add_content{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto auto;
  width: 600rpx;
  height: 600rpx;
  padding: 20rpx 20rpx 0 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  z-index: 100;
}
.add_content form{
  overflow: hidden;
}
.add_content .items{
  justify-content: flex-start;
  padding: 20rpx 10rpx;
  border-bottom: 1px solid #ddd;
}
.add_content .items .left_text_box{
  display: inline-flex;
  width: 170rpx;
}
.add_content .select_ress{
  width: 390rpx;
}
.add_content .sava_btn{
  width: 100%;
  margin-top:40rpx;
  background-color: #efefef;
}
.add_content .close{
  position: absolute;
  top:-2%;
  right: -2%;
  display: block;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #fc4b00;
  color: #fff;
  text-align: center;
}
.max{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  display: block;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: .7;
  z-index: 70;
}
.select{
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  cursor: pointer;
  background-size: 60rpx;
}
.not_check{
  background-image: url(http://wx.so50.com/images/购物车_01_03.png);
}
.select_check{
  background-image: url(http://wx.so50.com/images/购物车_1_03.png);
}