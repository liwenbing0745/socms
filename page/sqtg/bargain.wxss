    border: 0;
    border-radius: 0;
    padding: 3rpx 0;
    font-size:32rpx;
} */
.fix_btn .never_btn{
    text-align: center;
    color: #fff;
    background-color: #ff7800;
}
.fix_btn .never_btn .btn{
    width:100%;
    margin:0 auto;
    line-height:110rpx;
}

.friends_help{
    position: fixed;
    left:0;
    bottom:0;
    display: block;
    width:100%;
    background-color:#fff;
    z-index:150;
}
.friends_help image{
    width:100rpx;
    height: 100rpx;
    border-radius: 100%;
    overflow: hidden;
}
.friends_help button{
    background-color: #fff;
}
.friends_help .box{
    padding: 10rpx 0;
    text-align: center;
}
.friends_help .content{
    justify-content:space-around;
    border-bottom:2px solid #df6e3d;
}

  /* mask */
.mask{
    position: fixed;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: .7;
    z-index: 100;
}

/* alert */
.alert_box{
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 500rpx;
    height: 420rpx;
    padding: 10rpx 15rpx;
    margin: auto auto;
    background-color: #fff;
    border-radius: 15rpx;
    z-index: 150;
}
.alert_box .content{
    text-align: center;
}
.alert_box .content .first{
    font-size: 32rpx;
    font-weight: 700;
}
.alert_box .content view{
    padding:10rpx 0;
}
.alert_box .span{
    font-size: 101rpx;
    font-weight: 700;
    color: #000;
    transform: rotate(45deg);
} 
.alert_box button{
    width: 80%;
    background-color: #ff7800;
    color: #fff;
}
