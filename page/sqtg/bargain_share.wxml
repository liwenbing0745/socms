<!--page/sqtg/bargain_share.wxml-->
<view class='container'>

    <!--图片-->
    <view class="car_cont">
        <view class='img_box'>
            <image src="{{products[0].pro_pic}}" mode="widthFix" />
        </view>
    </view>

    <!--价格&名称-->
    <view class='name_cont bc_white mar_btm pad_tb'>
        <view class='flex_box name'>
            <view class="car_name">
                <text class='pro_name'>{{products[0].pro_name}}</text>
            </view>
            <view class="num_box flex_line">
                <view>
                    <text>{{products[0].free_num}}</text>
                </view>
                <view>
                    <text>剩余</text>
                </view>
            </view>
        </view>

        <view class='product_price flex_box'>
          <view class='items flex_inline'>
            <text class='min_price fc_orange'>{{products[0].nowprice}}</text>
            <text>现在价格</text>
          </view>
          <view class='items flex_inline'>
            <text class='fc_orange'>{{products[0].remarket}}</text>
            <text>原价</text>
          </view>
          <view class='items flex_inline'>
            <text class='fc_orange'>{{products[0].min_price}}</text>
            <text>最低</text>
          </view>
        </view>

    </view>

    <!--砍价进度-->
    <view class='section bc_white mar_btm pad_tb'>
        <view class='user_name flex_box'>
            <image src="{{user.user_pic}}"/>
            <text>{{user.user_name}}</text>
            <text class='fc_orange text'>赶紧帮你的老铁砍死他，然后你也可以参与。</text>
        </view>
        <view class='canvas_box'>
            <view class='float_box' style='left:{{alcLeft}}%'>
                -￥{{products[0].barprice}}
            </view>

            <view class='canvas flex_box'>
                <view class='bg_image'>
                    <view class='image' style='left:{{100 - alcRight}}%'></view>
                </view>
            </view>

            <view class='flex_box'>
                <text class='fc_gray'>原价：￥{{products[0].remarket}}</text>
                <text class='fc_orange'>现价：￥{{products[0].nowprice}}</text>
            </view>
        </view>
        <view class='bargain_btn'>
            <button wx:if='{{user.user_bargain == "0"}}' bindtap='showBargain'>帮TA砍一刀</button>
            <button wx:if='{{user.user_bargain == "1"}}' bindtap='toMyBargain'>我也要砍价</button>
        </view>

        <view class='data_content'>
            <!--好友砍价榜 -->
            <scroll-view scroll-y="true" class='friends'>
                <view class='items flex_box' wx:for="{{recordList}}" wx:key="{{index}}">
                    <image src='{{item.img}}'/>
                    <text class='user_name'>{{item.name}}</text>
                    <view>
                        <text>一共砍掉</text>
                        <text class='fc_orange user_bargain'>{{item.bargain}}</text>
                        <text>元</text>
                    </view>
                </view>
            </scroll-view>

            <!--本期用户砍价成功数据-->
            <view class='recond'>
                <view>
                    <text>已有{{conut}}人砍价成功</text>
                </view>
                <scroll-view scroll-y="true" class='recond_box'>
                    <view class='items flex_box' wx:for="{{buyrecordList}}" wx:key="{{index}}">
                        <view class='items_box'>
                            <image src='{{item.img}}'/>
                            <text class='user_name'>{{item.name}}</text>
                            <text>砍至最低价，拿到了{{item.product}}</text>
                        </view>
                        <view>
                            <text>{{item.time}}</text>
                        </view>
                    </view>
                </scroll-view>
            </view>
        </view>
    </view>

    <view class='to_home' bindtap='toIndex'>
        <image src="http://wx.so50.com/images/xcx首页.png" />
    </view>

    <!--遮罩层-->
    <view class='mask' wx:if='{{showAlert}}'></view>

    <view class='alert_box' wx:if='{{showAlert}}'>
        <view class='content'>
            <view class='first'>
                <view>太棒了！</view>
            </view>
            <view>
                <view>一出手就砍掉{{bargain}}元，真厉害!</view>
            </view>
            <view>
                <button bindtap='toMyBargain'>
                    我也要砍价
                </button>
            </view>
            <view class='span' bindtap='showBargainBox'>+</view>
        </view>
    </view>

    <view class='max' hidden="{{hiddenLoading}}">
        <loading hidden="{{hiddenLoading}}">正在加载</loading>
    </view>
</view>

