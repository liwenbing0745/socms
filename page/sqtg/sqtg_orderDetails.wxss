/* page/sqtg/sqtg_orderDetails.wxss */
page {
	height: 100%;
  font-family: "Microsoft YaHei";
  font-size:28rpx; 
}
.container {
	height: 100%;
  position: relative;
}
scroll-view {
  width: 100%;
  height: 100%;
  white-space: nowrap;
}
.flex_box{ 
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.flex_inline{
  display: inline-flex;
  width: 100%;
  justify-content: space-between;
}
.fc_orange{
  color: #fc4b00;
}
.fc_blue{
  color: #5c52bf;
}
.order_active,
.todata{
  padding: 15rpx 0;
  justify-content: space-around;
  background-color: #fff;
  border-bottom: 1px solid #ddd;
}
.order_active text,
.todata text{
  padding: 8rpx 0;
}

.order_active .select,
.todata .select{
  color: #fc4b00;
}
.orderLists .items .items_img image{
  width: 120rpx;
}
.orderLists{
  height:920rpx;
  padding-bottom:80rpx;
}
.orderLists .items:first-child{
  margin-top: 15rpx;
}
.orderLists .items{
  position:relative;
  height:auto;
  background-color: #fff;
}
.orderLists .items .item_top_box{
  position:relative;
  top:0;
  left:0;
  width: 100%;
  height:100%;
  background-color: #fff;
}
.orderLists .items .item_txt{
  width: 100%;
  z-index: 5;
  padding:0 10rpx;
  transition: left 0.2s ease-in-out;
}
.orderLists .items .item_header{
  border-bottom: 1px solid #ddd;
}
.orderLists .items .item_header text{
  font-size: 26rpx;
}
.orderLists .items .item_bottom_box{
  position:absolute;
  top:0;
  right: 0;
  width: 180rpx;
  height: 100%;
  line-height:450rpx;
  text-align: center;
  color: #fff;
  background-color: #e64340;
  z-index: 4;
}
.orderLists .items .item_top_box>view,
.orderLists .items .items_wrap{
  padding: 15rpx;
}
.orderLists .items .items_img{
  width: 30%;
  font-size: 0;
  text-align:center;
}
.orderLists .items .items_img image{
  width: 200rpx;
  height: 200rpx;
}
.orderLists .bor_btm{
  border-bottom: 1px solid #ddd;
}
.orderLists .items .items_wrap_center{
  width: 70%;
  flex-direction: column;
}
.orderLists .items .items_wrap_center>text{
  line-height: 1;
}
.orderLists .items .pro_title{
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2;
}
.orderLists .items .order_btn_box{
  position: relative;
  justify-content: flex-end;
}
.orderLists .items .order_btn_box button{
  width:135rpx;
  padding:0;
  margin:0 0 0 5rpx;
  color: #fc4b00;
  border: 1px solid #fc4b00;
}
.orderLists .items .order_btn_box .noPay{
  position: absolute;
  top: 30%;
  left: 3%;
  padding: 5rpx 10rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #fc4b00;
  border: 1px solid #ddd;
}
.loading_btn{
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  z-index: 20;
}
.loading_btn button{
  width: 50%;
  padding: 15rpx 0;
  color: #fff;
  border-radius: 0;
}
.loading_btn .green{
  background-color: green;
}