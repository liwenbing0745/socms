page{
  position:relative;
}
.bg{
  background-color: #fff;
}
.detailFix{
  display:flex;
  width:100%;
  box-sizing: border-box;
  position:fixed;
  flex-direction: column;
  justify-content:space-between;
  padding:10rpx 15rpx;
}
.detailFix text{
  font-size:24rpx;
}
.detailTitle{
  flex-direction:column;
}
.detailTitle .content{
  display:flex;
  justify-content:space-between;
  padding:10rpx 15rpx;
}
.detailTitle .content .red{
  color:#e4393c;
}
.detail_cont{
  display: flex;
  justify-content: center;
}
.detail_cont .v{
  font-size:30rpx;
  padding:10rpx;
  margin-right:8rpx;
  color:#fff;
  background:#fb4b00;
  border: 1px solid #efefef;
  border-radius:10%;
}
#detail {
    font-size:23rpx;
}

.info_cont {
    margin: 0px 10px;
}

#info {
    color: #888888;
}

.car_cont {
    margin: 10px;
    height: 225px;
    width: auto;
}
.car_pic {
    height: 225px;
}

.name_cont {
    bottom:0;
    left:0;
    margin-top: 10px;
}
.name_cont .content{
    display:flex;
    justify-content: space-between;
    padding:10rpx 15rpx;
}

.car_name {
    font-size:30rpx;
}
.car_price {
    display: block;
    margin-top: 10px;
    margin-left: 10px;
    color: #FF6600;
    font-weight: bold;
}

.car_detail {
    border-top: 1px solid #C0C0C0;
    margin-top: 5px;
    margin-bottom:230rpx
}
.car_detail .shop image {
	width:260rpx;
  height:260rpx;
  vertical-align: top;
}
.car_detail .shop .orderName{
  display:inline-flex;
  flex-direction:column;
  justify-content:space-around;
  padding:0 10rpx;
  border-bottom:1rpx solid #efefef
}
.car_detail .shop .orderDetails{
  display:flex;
}
.car_detail .shop .orderName .v{
  height:85rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden; 
}
.car_detail scroll-view{
  height:1000rpx;
}

#btn {
    width: 93%;
    margin: 10px;
}