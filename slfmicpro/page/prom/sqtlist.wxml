<view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">拼团产品</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">已开团</view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">已完成团</view>
</view>

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">

  <swiper-item>
    <view class="container">
      <view class="header">
        <view class="search">
          <image class="icon" src="/imgs/index/icon_search.png"/>
          <input bindinput="inputSearch" placeholder="{{placeholder}}" auto-focus=""/>
        </view>
        <button class="yellow {{searchWords.length?'':'disabled'}}" size="mini" hover-class="hover" loading="" plain="" disabled="{{!searchWords.length}}"
            bindtap="doSearch">
          搜索
        </button>
      </view>
      <view id="result" class="result" hidden="{{!showResult}}">
        <view class="filters">
          <view class="filter {{filterId==158?'active':''}}" data-id="158" bindtap="tapFilter">原产地</view>
          <view class="filter {{filterId==281?'active':''}}" data-id="281" bindtap="tapFilter">地标产品</view>
          <view class="filter {{filterId==159?'active':''}}" data-id="159" bindtap="tapFilter">老字号</view>
          <view class="filter {{filterId==196?'active':''}}" data-id="161" bindtap="tapFilter">礼盒</view>
        </view>
        <scroll-view  scroll-y="true"  style="height:780px;" bindscrolltolower="loadImages" bindscrolltoupper="refesh" scroll-top="{{scrollTop}}">
          <view class="shop_list">
            <view class="shop" wx:for="{{products}}" wx:key="id">
              <navigator url="/page/prom/year_sqtg_newpri?id={{item.id}}">
                <image src="{{item.img}}"/>
                <view class="shopText">
                  <text class="v name">{{item.pro_name}}</text>
                  <text class="v area">产地：{{item.area}}</text>
                  <text class="v sum">成交笔数:{{item.sales_sum}}</text>
                  <view class="priceBox v">
                    <text class="market">市场价:￥{{item.pro_markpri}}元</text>
                    <text class="price">社区供货价:￥{{item.pro_sqtgpriptj}}元</text>
                  </view>
                </view>
              </navigator>
            </view>
          </view>


        </scroll-view>
      </view>
    </view>
  </swiper-item>

  <swiper-item>
    <scroll-view scroll-y="true" class="orderList" style="height: 100%;" bindscrolltolower="loadImagesord" bindscrolltoupper="refeshord">
      <view class="shop" wx:for="{{orderlists}}" wx:key="id">
        <navigator url="/page/prom/year_sqtg_infor?sqtgbountyid={{item.id}}">
          <view class="orderDetails">
            <view class='orderImg'>
              <image src="{{item.pro_pic}}"/>
            </view>
            <view class='orderPro'>
              <view class="orderName">
                <text class="v ">{{item.proname}}</text>
              </view>
              <view>
                  <text class="v num">提货地址:{{item.proviceFirstStageName}}{{item.addressCitySecondStageName}}{{item.addressCountiesThirdStageName}}{{item.buy_sum}}{{item.consigneeadrress}}</text>
                  <text class="v">{{item.consigneepeo}}</text>
                  <text class="v">{{item.consigneemobile}}</text>
                  <text class="v ctrs">参团人数:{{item.ctrs}}</text>
              </view>
             </view>
          </view>
        </navigator>
      </view>

    </scroll-view>
  </swiper-item>

  <swiper-item>
    <scroll-view scroll-y="true" class="orderList" style="height: 100%;" bindscrolltolower="loadImagesordend" bindscrolltoupper="refeshordend">
      <view class="shop" wx:for="{{orderlistsend}}" wx:key="id">
        <navigator url="/page/prom/year_sqtg_infor?sqtgbountyid={{item.id}}">
          <view class="orderDetails">
            <view class='orderImg'>
              <image src="{{item.pro_pic}}"/>
            </view>
            <view class='orderPro'>
              <view class="orderName">
                <text class="v ">{{item.proname}}</text>
              </view>
              <view>
                  <text class="v num">提货地址:{{item.proviceFirstStageName}}{{item.addressCitySecondStageName}}{{item.addressCountiesThirdStageName}}{{item.buy_sum}}{{item.consigneeadrress}}</text>
                  <text class="v">{{item.consigneepeo}}</text>
                  <text class="v">{{item.consigneemobile}}</text>
                  <text class="v ctrs">参团人数:{{item.ctrs}}</text>
              </view>
             </view>
          </view>
        </navigator>
      </view>

    </scroll-view>

  </swiper-item>
</swiper>



