/* page/sqtg/sqtg_pro.wxss */
page{ 
  position:relative;
  font-family: "Microsoft YaHei";
  font-size:28rpx;
}
.container {
	height: 100%;
  padding-bottom: 90rpx;
}
.flex_box{
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.flex_inline{
  display: inline-flex;
  width: 100%;
  justify-content: space-between;
}
.flex_dir{
  flex-direction: column;
}
.fc_gray{
  color: #7d7d7d;
}
.car_cont image,
.details_img image{
  display:block;
  width:100%;
}
.car_box image{
  width: 50rpx;
}
.car_wrap{
  width: 100%;
  padding: 15rpx 10rpx;
  background-image: url(http://wx.so50.com/images/拼团详情tg_1_02.jpg);
  background-size: 100%;
  background-repeat: no-repeat;
}
.skill_over{
  position: relative;
}
.skill_over::after{
  content: '';
  position: absolute;
  top: 8%;
  left: 35%;
  width: 200rpx;
  height: 200rpx;
  background-image: url(http://wx.so50.com/images/seconds_over.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  z-index: 10;
}
.car_wrap .time_box{
  width: 30%;
  text-align: center;
}
.car_wrap text{
  font-size: 26rpx;
}
.car_wrap .time_box>text{
  color: #fc4b00;
}
.car_wrap .time_box .time_items{
  padding: 4rpx 7rpx;
  margin: 0 5rpx;
  color: #fff;
  border-radius: 7rpx;
  background-color: #5f330c;
}
.car_wrap .content_box{
  width: 70%;
  color: #fff;
}
.car_wrap .content_box .flex_inline{
  text-align: center;
  justify-content: space-around;
}
.car_wrap .content_box .car_price{
  text-decoration: line-through;
  font-size: 26rpx;
}
.car_wrap .car_market{
  width: 450rpx;
}
.car_wrap .car_market text{
  font-size:40rpx;
  font-weight: 700;
}
.name_cont{
  width: 100%;
  padding: 15rpx 10rpx;
  background-color: #fff;
}
.name_cont .skill_text{
  color: #e4393c;
  font-weight: 700;
}
.name_cont .name{
  width: 70%;
}
.name_cont .title,
.name_cont .car_name{
  display: inline-block;
  width: 100%;
  height: 40rpx;
  overflow: hidden;
}
.name_cont .car_name{
  height: 95rpx;
  font-size: 36rpx;
  font-weight: 700;
}
.name_cont .car_box{
  width: 30%;
  text-align: center;
}
.footer .controller{
  justify-content: space-around;
  padding: 15rpx 20rpx;
}
.footer .controller .seclet{
  border-bottom: 1px solid #fc4b00;
  color: #fc4b00;
}
.footer .record{
  background-color: #fff;
}
.footer .record scroll-view{
  height: 500rpx;
}
.footer .record .items{
  max-height:100rpx;
  padding: 12rpx;
  border-bottom: 1px solid #ddd;
}
.footer .record image{
  width: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}
.footer .record .user_name{
  width: 200rpx;
  height: 40rpx;
  overflow: hidden;
}
.footer .user_img_box{
  margin-bottom: 15rpx;
  background-color: #fff;
}
.footer .user_img_box .group_num {
  padding:15rpx 0;
  text-align: center;
}
.footer .user_img_box .content_box {
  justify-content: flex-start;
}
.footer .user_img_box .group_num text{
  color: #e4393c;
}
.footer .user_img_box .items{
  width: 25%;
  flex-direction: column;
}
.footer .user_img_box .items .img_box{
  text-align: center;
}
.footer .user_img_box .user_img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.footer .user_img_box .user_name{
  width: 100%;
  height: 36rpx;
  padding: 8rpx 0;
  overflow: hidden;
  text-align: center;
}



.fix_btn{
  position:fixed;
  left:0;
  bottom:0;
  justify-content: flex-start;
  display: flex;
  width:100%;
  background-color:#fff;
  z-index:5;
}
.fix_btn button{
  color:#fff;
  width:50%;
}
#btn{
  font-family: "Microsoft YaHei";
  font-size:30rpx;
  padding:15rpx 5rpx;
  border-radius:0;
  overflow: hidden;
}
button::after{
  border:none;
  border-radius: 0;
}
.fix_btn .btn_index navigator{
  width:100%;
  height:100%;
  line-height:70rpx;
  text-align: center;
}
.fix_btn button{
  background-color:transparent;
}
.fix_btn .btn_buy{
  background-color:#e4393c;
}
.fix_btn .btn_index{
  color: #000;
  border-right:1px solid #ddd;
  background-color: #fff;
}
.fix_btn .btn_add{
  background-color:#ff971c;
}
.fix_btn .cartNum{
  position: absolute;
  top:2%;
  left:58%;
  width:40rpx;
  height:40rpx;
  background:#fff;
  overflow: hidden;
  border-radius:50%;
  text-align: center;
  line-height: 140%;
}
.fix_btn .cartNum text{
  font-size:24rpx;
}
